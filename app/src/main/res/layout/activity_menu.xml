<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".control.MenuActivity">

    <Button
        android:id="@+id/btnGoPhoto"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/fotoeditor"
        android:textColor="@color/colorwhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoVideo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/grabarvideo"
        android:textColor="@color/colorwhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnGoPhoto"
        app:layout_constraintStart_toStartOf="@+id/btnGoPhoto"
        app:layout_constraintTop_toBottomOf="@+id/btnGoPhoto" />
</androidx.constraintlayout.widget.ConstraintLayout>